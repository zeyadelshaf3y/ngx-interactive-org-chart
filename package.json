{
  "name": "ngx-interactive-org-chart",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "npm run build:lib && npm run build:demo",
    "build:lib": "ng build ngx-interactive-org-chart --configuration production",
    "build:demo": "ng build demo --configuration production --output-path docs --base-href /ngx-interactive-org-chart/",
    "build:icons": "npx svg-sprite -s -o projects/demo/src/assets/icons/ --symbol-dest projects/demo/src/assets/icons/ projects/demo/src/assets/icons/*.svg",
    "watch": "ng build --watch --configuration development",
    "watch:lib": "ng build ngx-interactive-org-chart --watch --configuration development",
    "test": "ng test",
    "pack": "npm run build:lib && cd dist/ngx-interactive-org-chart && npm pack",
    "publish": "npm run build:lib && cd dist/ngx-interactive-org-chart && npm publish",
    "deploy": "npm run build:demo && cp -r docs/browser/* docs/ && cp docs/index.html docs/404.html && rm -rf docs/browser",
    "format": "prettier --write \"**/*.{ts,js,html,scss,css,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,html,scss,css,json,md}\"",
    "format:staged": "prettier --write",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,js,html,scss,css,json,md}": [
      "prettier --write"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^21.0.6",
    "@angular/common": "^21.0.6",
    "@angular/compiler": "^21.0.6",
    "@angular/core": "^21.0.6",
    "@angular/forms": "^21.0.6",
    "@angular/platform-browser": "^21.0.6",
    "@angular/platform-browser-dynamic": "^21.0.6",
    "@angular/router": "^21.0.6",
    "panzoom": "^9.4.3",
    "rxjs": "~7.8.0",
    "svg-sprite": "^2.0.4",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.4",
    "@angular/cli": "^21.0.4",
    "@angular/compiler-cli": "^21.0.6",
    "@types/jasmine": "~5.1.0",
    "husky": "^9.1.7",
    "jasmine-core": "~5.4.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^16.1.2",
    "ng-packagr": "^21.0.1",
    "prettier": "^3.6.2",
    "typescript": "~5.9.2"
  }
}
